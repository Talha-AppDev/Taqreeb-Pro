<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rectangle_3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
    android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="#E4E3E3"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ellipse_223"
                android:layout_width="40dp"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ellipse"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="10dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Name"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ellipse_223"
                app:layout_constraintTop_toTopOf="@+id/ellipse_223" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="This is your messege. Click to read it."
                app:layout_constraintBottom_toBottomOf="@+id/ellipse_223"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ellipse_223"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="1.0" />

            <!-- Auto layout, variables, and unit scale are not yet supported -->
            <!--
              Font family: Inika
              Line height: 17sp
              -->

            <!-- styles.xml -->

            <TextView
                android:id="@+id/some_id"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ellipse_221"
                android:foregroundGravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:text="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>